<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="sk.kasper.ui_launch.LaunchViewModel" />

        <variable
            name="launchSiteViewModel"
            type="sk.kasper.ui_launch.section.LaunchSiteViewModel" />

        <variable
            name="orbitViewModel"
            type="sk.kasper.ui_launch.section.OrbitViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:paddingBottomSystemWindowInsets="@{ true }">

            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/composeToolbarToolbarLayout"
                android:layout_width="0dp"
                android:layout_height="260dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/sectionsLinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/composeToolbarToolbarLayout">

                <!-- GALLERY -->
                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/galleryComposeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- LAUNCH SITE -->
                <TextView
                    style="@style/SectionTitleStyle.LaunchDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_normal"
                    android:layout_marginEnd="@dimen/padding_normal"
                    app:capitalizeText="@{safeUnbox(launchSiteViewModel.title)}"
                    app:visible="@{launchSiteViewModel.visible}"
                    app:paddingLeftSystemWindowInsets="@{ true }"
                    tools:text="@string/section_launch_site"/>

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    app:liteMode="true"
                    app:mapType="normal"
                    app:visible="@{launchSiteViewModel.visible}"/>

                <TextView
                    android:id="@+id/launchSiteInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_normal"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:layout_marginEnd="@dimen/padding_normal"
                    app:paddingLeftSystemWindowInsets="@{ true }"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:visible="@{launchSiteViewModel.visible}"
                    tools:text="@tools:sample/lorem"/>


                <!-- ORBIT -->
                <TextView
                    style="@style/SectionTitleStyle.LaunchDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_normal"
                    android:layout_marginEnd="@dimen/padding_normal"
                    android:text="@string/section_orbit"
                    app:visible="@{orbitViewModel.visible}"/>

                <sk.kasper.ui_common.view.OrbitView
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    app:orbit="@{orbitViewModel.orbit}"
                    app:visible="@{orbitViewModel.visible}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_normal"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:layout_marginEnd="@dimen/padding_normal"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:paddingLeftSystemWindowInsets="@{ true }"
                    app:capitalizeText="@{safeUnbox(orbitViewModel.orbitName)}"
                    app:visible="@{orbitViewModel.visible}"
                    tools:text="@string/geostationary_orbit"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
