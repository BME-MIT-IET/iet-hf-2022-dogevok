<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="textAppearanceBody2">@style/MyTextAppearanceBody2</item>
        <item name="textAppearanceHeadline6">@style/MyTextAppearanceHeadline6</item>
        <item name="android:divider">@color/off_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textAppearanceListItem">@style/MyListItemTextAppearance</item>
        <item name="android:textAppearanceListItemSecondary">@style/MyListItemSecondaryTextAppearance</item>
    </style>

    <style name="AppTheme.DayNight">
        <item name="colorPrimary">@color/cyan_500</item>
        <item name="colorPrimaryDark">@color/cyan_500</item>
        <item name="colorSecondary">@color/blue_500</item>
    </style>

    <style name="Base.AppTheme.DayNight.Immersive" parent="AppTheme.DayNight">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="AppTheme.DayNight.Immersive" parent="Base.AppTheme.DayNight.Immersive"/>

    <style name="MyTextViewStyle" parent="@android:style/Widget.Material.TextView"/>

    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/PreferenceCategoryStyle</item>
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="PreferenceCategoryStyle" parent="@style/Preference.Category.Material">
        <item name="android:layout">@layout/preference_category_custom</item>
    </style>

    <style name="BaseToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight.ActionBar</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="MyToolbarStyle" parent="@style/BaseToolbarStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="MyListItemTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="MyListItemSecondaryTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body1"/>

    <style name="MyTextAppearanceBody2" parent="@style/TextAppearance.MaterialComponents.Body2"/>

    <style name="MyTextAppearanceHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="SectionTitleStyle">
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="SectionTitleStyle.LaunchDetail">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="SectionTitleStyle.LaunchDetail.First">
        <item name="android:paddingTop">8dp</item>
    </style>

</resources>
